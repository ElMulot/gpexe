</ul>

<ul class="navbar-nav ms-auto">
	{{ navbar.item('Account', path('account')) }}
	{{ navbar.dropdown('GPExe', {
		'Wiki': 'https://github.com/ElMulot/gpexe/wiki',
		'Report bug': 'https://github.com/ElMulot/gpexe/issues',
		'About': path('about'),
		'Log': path('log'),
