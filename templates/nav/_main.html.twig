	{% if is_granted('ROLE_ADMIN') %}
		{{ navbar.dropdown('Admin', {
			'New project': path('project_new'),
			'Company': path('company'),
			'User': path('user'),
			'Profil': path('profil'),
			'Log': path('log'),
		}) }}
