{%- block combobox_widget -%}
	<div {{ stimulus_controller('form--combobox', {'customOptionLabel': form.vars.customOptionLabel|trans }) }}>
		{{ form_widget(form.choice, {'attr': form.choice.vars.attr|merge({'data-form--combobox-target': 'choice'})}) }}
		{{ form_widget(form.input, {'attr': form.input.vars.attr|merge({'data-form--combobox-target': 'input'})}) }}
	</div>
{%- endblock -%}
