{% set title = ('delete.' ~ entities|first|short_name)|trans({'count':entities|length}) %}

{% extends 'modal/xl_modal.html.twig' %}

{% block modal_body %}
	{% if entities|length == 1 %}
		<p>{{ ('confirm.' ~ entities|first|short_name)|trans({'count':entities|length}) }} : {{ entities|first }}</p>
	{% else %}
		<p>{{ ('confirm.' ~ entities|first|short_name)|trans({'count':entities|length}) }} :</p>
		{% for entity in entities %}
			<li>{{ entity }}</li>
		{% endfor %}
	{% endif %}
	{{ form(form) }}
{% endblock %}

{% block modal_footer %}
	
	<button type="button" class="btn btn-secondary btn-width" data-bs-dismiss="modal">{% trans %}Cancel{% endtrans %}</button>
	<button type="submit" form="form" class="btn btn-danger btn-width">{% trans %}Delete{% endtrans %}</button>

{% endblock %}