{% for label, messages in app.flashes %}
	{% for message in messages %}
		<div class="toast alert-{{ label }} text-white" role="alert" aria-live="assertive" aria-atomic="true" {{ stimulus_controller('toast') }}>
			<div class="d-flex">
				<div class="toast-body">
					{{ message|trans }}
				</div>
				<button type="button" class="btn-close mt-2 me-2 m-auto" data-bs-dismiss="toast" aria-label="{% trans %}Close{% endtrans %}"></button>
			</div>
		</div>
	{% endfor %}
{% endfor %}