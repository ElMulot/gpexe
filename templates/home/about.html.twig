{% extends 'home/layout.html.twig' %}

{% block content %}
	<div class="jumbotron w-100">
		<div class="accordion" id="accordion">
			{% for key, item in items %}
    			<div class="card">
    				<div class="card-header" id="h_{{ key }}">
    					<h2 class="mb-0">
    						<button class="btn btn-link{% if key %} collapsed{% endif %}" type="button" data-toggle="collapse" data-target="#collapse_{{ key }}" aria-expanded="{% if key %}false{% else %}true{% endif %}" aria-controls="collapse_{{ key }}">
                      			Version {{ item.version}} - {{ item.date }}
                    		</button>
                  		</h2>
                	</div>
            
                    <div id="collapse_{{ key }}" class="collapse{% if key==0 %} show{% endif %}" aria-labelledby="heading_{{ key }}" data-parent="#accordion">
    					<div class="card-body">
    						{% for change in item.changes %}
    							<li>{{ change }}</li>
    						{% endfor %}
                        </div>
    				</div>
    			</div>
			{% endfor %}
        </div>
	</div>
{% endblock %}