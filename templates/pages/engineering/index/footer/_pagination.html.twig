{% if page_max > 1 %}
	<nav aria-label="Pagination">
		<ul class="pagination" {{ stimulus_controller('pagination') }}>
			<li class="page-item{% if query.page == 1 %} disabled{% endif %}">
				<a class="page-link" href="#" aria-label="Previous">
					<span aria-hidden="true">&laquo;</span>
				</a>
			</li>
			{% for i in max(1, query.page-1)..min(page_max, query.page+1) %}
				<li class="page-item{% if i == query.page %} active{% endif %}">
					<a class="page-link" href="#">{{ i }}</a>
				</li>
			{% endfor %}
			<li class="page-item{% if query.page == page_max %} disabled{% endif %}">
				<a class="page-link" href="#" aria-label="Next">
					<span aria-hidden="true">&raquo;</span>
				</a>
			</li>
		</ul>
	</nav>
{% endif %}