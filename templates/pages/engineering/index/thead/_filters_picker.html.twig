<div class="dropdown" {{ stimulus_controller('engineering--header', { 'type': 'filters_picker' }) }}>
	<button class="btn btn-sm btn-primary rounded-0 px-3 py-2" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
		<i class="bi bi-filter-square-fill"></i>
	</button>
	<div class="dropdown-menu dropdown-menu-end">
		<div style="width: 15rem;">
			<div class="border-bottom border-dark px-1 pb-2 text-center">
				{% trans %}Filters{% endtrans %}
			</div>
			<div class="dropdown-list pt-2 px-3">
				{% for field in fields %}
					{% if field.display.filter is same as(true) %}
						<div class="form-check">
							<input type="checkbox" class="form-check-input" id="{{ field.id }}"
								{{ stimulus_action('engineering--header', 'filter') }}
								{{ stimulus_param('engineering--header', {'key': field.id}) }}>
							<label for="{{ field.id }}" class="form-check-label w-100">
								{{ field.title }}
							</label>
						</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>