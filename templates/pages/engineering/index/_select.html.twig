{% set title = 'Select a serie' %}

{% extends 'modal/xl_modal.html.twig' %}

{% block modal_body %}
	{% set serie_ids = series|map(v => v.id) %}
	<div class="row justify-content-center">
		<a class="col-md-6 btn btn-primary btn-lg py-3 mt-3" href="{{ path('serie', {'project': project.id, 'id': serie_ids }) }}" data-turbo-frame="serie_pannel" {{ stimulus_target('modal', 'close') }}>
			{% trans %}All{% endtrans %}
		</a>
	</div>
	{% for serie in series %}
		<div class="row justify-content-center">
			<a class="col-md-6 btn btn-primary btn-lg py-3 mt-3" href="{{ path('serie', {'project': project.id, 'id': serie_ids, 'selected': serie.id }) }}" data-turbo-frame="serie" {{ stimulus_target('modal', 'close') }}>
				{{ serie.name }}
			</a>
		</div>
	{% endfor %}
{% endblock %}

{% block modal_footer %}

{% endblock %}
