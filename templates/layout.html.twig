{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar fixed-top navbar-expand text-center navbar-dark bg-primary">
        {{ block('nav') }}
    </nav>
    <main class="mt-3">
    	{% if app.session.flashbag.get('_count') is defined %}
            {% set count = app.session.flashbag.get('_count')|first %}
        {% else %}
            {% set count = 1 %}
        {% endif %}
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
            	<div class="row justify-content-xl-center">
            		<div class="alert alert-{{ label }} col-xl-5">   
                        {{ message|trans({'count': count}) }}.
            		</div>
        	    </div>
            {% endfor %}
        {% endfor %}
        
        <div class="row justify-content-xl-center">
            {{ block('content') }}
    	</div>
	</main>
{% endblock %}

{% block nav_item %}
	width: 200px;
{% endblock %}