{% extends 'layout.html.twig' %}
{% import "macros/_nav.html.twig" as nav %}

{% block stylesheets %}
	{{ encore_entry_link_tags('main') }}
	{{ parent() }}
{% endblock %}

{% block nav %}
	{{ include('nav/_main.html.twig') }}
{% endblock %}

{% block content %}
	<div class="container-lg">
		<div class="row">
			{% for project in projects|merge(projects)|merge(projects)|merge(projects) %}
				<div class="col pt-5">
					<div class="card">
						<div class="card-header">{{ project.name }}</div>
						<div class="card-body">
							<div class="overlay">
								<a href="{{ path('project_view', {'project': project.id}) }}" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-original-title="{% trans %}Engineering{% endtrans %}">
									<img src="{{ asset('icons/engineering.png') }}" alt="{% trans %}Engineering{% endtrans %}"/>
									<div ></div>
								</a>
							</div>
						</div>
						{% if (is_granted('ROLE_CONTROLLER') and app.user in project.users) or is_granted('ROLE_ADMIN') %}
							<div class="card-body text-end">
								<a class="btn btn-sm btn-success" href="{{ path('project_edit', {'project': project.id}) }}">{% trans %}Edit{% endtrans %}</a>
								<a class="btn btn-sm btn-danger" href="{{ path('project_delete', {'project': project.id}) }}">{% trans %}Delete{% endtrans %}</a>
							</div>
						{% endif %}
					</div>
				</div>
			{% else %}
				<div class="col">{% trans %}Empty list{% endtrans %}</div>
			{% endfor %}
	</div>
</div>
{% endblock %}

{% block footer %}
	
{% endblock %}