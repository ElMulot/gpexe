<div class="modal-header">
	<button type="button" class="close" data-dismiss="#modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<div class="modal-body overflow-auto">
    <div class="px-5">
        {% for label, messages in app.flashes %}
    		{% for message in messages %}
        		<div class="row justify-content-center">
        			<div class="alert alert-{{ label }} w-100">{{ message|trans }}.</div>
        		</div>
    		{% endfor %}
    	{% endfor %}
	</div>
    <form id="form_ajax" method="POST" action="{{ app.request.uri }}">
    	{% if entities|length == 1 %}
    		<p>{{ ('confirm.' ~ entities|first|short_name)|trans({'count':entities|length}) }} : {{ entities|first }} ?</p>
    	{% else %}
    		<p>{{ ('confirm.' ~ entities|first|short_name)|trans({'count':entities|length}) }} :</p>
    		{% for entity in entities %}
    			<li>{{ entity }}</li>
    		{% endfor %}
    	{% endif %}
    	<input type="hidden" name="_method" value="DELETE">
    	<input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
    </form>
</div>
<div class="modal-footer justify-content-center">
	<div class="col-4 text-right">
		<button type="button" class="btn btn-secondary w-75" data-dismiss="modal">{% trans %}Cancel{% endtrans %}</button>
	</div>
	<div class="col-4 text-left">
		<button type="submit" form="form_ajax" class="btn btn-danger w-75" data-toggle="ajax" data-url="{{ app.request.uri }}" data-target="#modal .modal-content">{% trans %}Delete{% endtrans %}</button>
	</div>
</div>