{% form_theme form 'ajax/layout.html.twig' %}

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<div class="modal-body overflow-auto">
    {{ form(form) }}
</div>
<div class="modal-footer justify-content-center">
	<div class="col-4 text-right">
		<button type="button" class="btn btn-secondary w-75" data-dismiss="modal">{% trans %}Cancel{% endtrans %}</button>
	</div>
	<div class="col-4 text-left">
		<button type="submit" form="form_ajax" class="btn btn-success w-75" data-toggle="ajax" data-url="{{ app.request.uri }}" data-target="#modal">{% trans %}Save{% endtrans %}</button>
	</div>
</div>