{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('console') }}
{% endblock %}

{% block nav %}
    {% if route_back is defined %}
        <div class="navbar-collapse" style="{{ block('nav_item') }}">
        	<ul class="navbar-nav mr-auto ">
        		{% if route_back is defined %}
            		<li class="nav-item" style="{{ block('nav_item') }}">
            			<a class="nav-link" href="{{ route_back }}">{% trans %}Back{% endtrans %}</a>
            		</li>
        		{% endif %}
        	</ul>
        </div>
    {% else %}
    	<div class="navbar-collapse" style="{{ block('nav_item') }}"></div>
    {% endif %}
    <div class="navbar-collapse navbar-brand justify-content-center">
        
    </div>
    <div class="navbar-collapse" style="{{ block('nav_item') }}"></div>
{% endblock %}

{% block content %}
    <div class="row w-100">
        <div id="output" class="col-6" data-toggle="ajax" data-url="{{ path('automation_launch', {'id': automation.id}) }}">
        
        </div>
        <div class="col-6">
        	<textarea id="console" rows="10" class="w-100"></textarea>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('console') }}
{% endblock %}