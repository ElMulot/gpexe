{% for label, messages in app.flashes %}
	{% for message in messages %}
		<div class="text-{{ label }}">{{ message }}.</div>
	{% endfor %}
{% endfor %}

{% if redirect == 'preload' %}
	<a class="active" data-toggle="ajax" data-url="{{ path('automation_preload', {'automation': automation.id}) }}" data-target="#output"></a>
{% elseif redirect == 'load' %}
	<a class="active" data-toggle="ajax" data-url="{{ path('automation_load', {'automation': automation.id}) }}" data-target="#output"></a>
{% elseif redirect == 'new_batch' %}
	<a class="active" data-toggle="ajax" data-url="{{ path('automation_console', {'automation': automation.id}) }}" data-target="#console"></a>
{% elseif redirect == 'completed' %}
	<a class="active" data-toggle="ajax" data-url="{{ path('automation_completed', {'automation': automation.id}) }}" data-target="#output"></a>
{% endif %}